{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],


    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
   

  "ignorePatterns": [ "build/*" ] , 
  "settings": {
    "react": {
      "createClass": "createReactClass", 
                                       
      "pragma": "React", 
      "version": "detect" 
    }
  }

    
}