{
    "env": {
        "browser": true,
        "es6": true, 
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
  "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
   "react/jsx-props-no-spreading": "off",
   "jsx-a11y/label-has-associated-control": "off",
       "prettier/prettier": ["error"]

    },    
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"],
        "paths": ["./src"]
      }
    }
  }



}